standard-font-size = 10pt

*
	font-family: "Helvetica Neue", "Segoe UI"
	font-size: standard-font-size
	line-height: 1em
	padding: 0
	margin: 0
	font-weight: normal
	letter-spacing: 0px
	cursor: default

*:active,
*:hover,
*:focus
	outline: none

body
	font-weight: 200
	font-size: standard-font-size
	background-color: #FFFFFF
	margin-left: 380px
	//-moz-user-select: -moz-none
	-khtml-user-select: none
	-webkit-user-select: none
	-ms-user-select: none
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	padding: 20px

::-moz-selection { background: transparent; }
::selection      { background: transparent; } 
		
::-webkit-input-placeholder
	font-weight: 200
	color: #d8d8dd
::-moz-placeholder
	font-weight: 200
	color: #d8d8dd
:-moz-placeholder
	font-weight: 200
	color: #d8d8dd
:-ms-input-placeholder
	font-weight: 200
	color: #d8d8dd

h1, h2, h3
	//font-family: "Helvetica Neue"
	font-weight: 200
	font-size: 2em

h2
	font-size: 1.7em

h3
	font-size: 1.3em

.app
	position: absolute
	top: 0
	right: 0
	left: 191px
	bottom: 0
	z-index: 100
	transition: left 400ms ease-out
	background-color: white
	&.fullscreen
		left: 0

.hidden
	display: none

.field
	line-height: 1.5em;
	.invalid
		color: red;
	.form &,
	.form.edit &
		label
			width: 150px
			display: inline-block
			text-align: right
			color: #bbb
			font-weight: normal
			letter-spacing: 0.02em
			text-transform: lowercase
		input[type=text]
			padding-left: 10px
			border: none
			cursor: auto
		&.edit input[type=text]:focus
			position: absolute
			padding: 3px
			border: 1px solid #BDBDBD
			box-shadow: 0 1px 5px #808182
			text-indent: 5px
			border-radius: 2px;
	.form.readonly & input[type=text]
		cursor: default !important

	.form.readonly & label:hover
		& + input[type=text]
			background-color: #E4E4E4
			border-radius: 0 10px 10px 0;
		.border
			display: inline-block
			background-color: #B2B3B3
			border-radius: 10px 0 0 10px;
			padding: 1px 1px 1px 5px
			color: white

.menu-panel
	display: block
	-webkit-transform: translate(0, 0)
	-webkit-transition: -webkit-transform 400ms ease-in
	border-right: #E8E8E8 1px solid
	h2
		font-size: 9pt
		font-weight: 400
		color: #A2A2A2
		letter-spacing: 0.025em
		line-height: 1.5em
	.menuitem
		list-style: none
		text-indent: 5px
		line-height: 1.4em
		a
			color: black
			text-decoration: none
			&:focus
				color: red;
		&.selected a
			color: #0061FF
			font-weight: 500

.menu-panel.hidden
	-webkit-transform: translate(-190px, 0)

.main.menu-panel
	background-color: #F7F7F7
	position: absolute
	top: 0
	left: 0
	bottom: 0
	min-width: 150px
	padding: 20px
	z-index: -10

.sub.menu-panel
	background-color: #FCFCFC
	position: absolute
	top: 0
	left: 190px
	bottom: 0
	min-width: 150px
	padding: 20px
	z-index: -20

.searchbox
	input
		border-radius: 10px
		height: 25px
		width: 100%
		text-indent: 3px
		font-size: 1em
		line-height: 1.3em
		border: 1px solid lightgray
		outline: none
		box-shadow: #AAA 0 1px 2px inset
		position: relative
		padding-right: 5px;
		padding-left: 5px;
		-webkit-appearance: searchfield
		white-space: initial

little-arrow-size=3px

.selectbox
	selection(important=)
		color: white important
		border-top: 1px solid #587FEE important;
		border-bottom: 1px solid #0D52EB important;
		background: #587FEE
		/***  CSS Gradient  ***/
		/*  Chrome 1-9 and Safari 4-5.0  */
		background-image: -webkit-gradient(linear, left top, left bottom, color-stop( 0.0, #587FEE ), color-stop( 1.0, #2361F5 )) important;
		/*  Chrome 10+ Safari 5.1+ Mobile Safari  */
		background-image: -webkit-linear-gradient(top, #587FEE, #2361F5 ) important;
		/*  Firefox 3.6+  */
		background-image: -moz-linear-gradient(top, #587FEE, #2361F5 ) important;
		/*  IE 10+  */
		background-image: -ms-linear-gradient(top, #587FEE, #2361F5 ) important;
		/*  Opera 11.10+  */
		background-image: -o-linear-gradient(top, #587FEE, #2361F5 ) important;
		/*  W3C  */
		background-image: linear-gradient(top, #587FEE, #2361F5 ) important;
	background: transparent
	-webkit-appearance: none
	-webkit-background-clip: none	
	border-radius: 0
	position: relative
	display: inline-block
	padding: 2px (5 * little-arrow-size) 2px 2px
	border: 1px solid transparent
	min-width: 20px
	span
		white-space: pre !important
	&.edit
		&.collapsed:focus
			border: 1px solid #7DB0E1
			box-shadow: #7DB0E1 0px 0px 5px, #7DB0E1 0px 0px 5px inset
		&:before,
		&:after
			display: block
			content: "▲▼"
			position: absolute
			right: 10px
			top: 50%
			width: 0px
			height: 0px
			font-size: 4pt
		&:after
			content: "▲"
			margin-top: (-2 * (little-arrow-size + 1) - 2)
		&:before
			content: "▼"
			margin-top: -3px
	.option-list
		display: none
		position: absolute
		top: -5px
		left: -20px
		min-width: 100%
		background: white
		border: 1px solid #EAEAEA
		padding: 4px 0 4px 0
		z-index: 10
		border-radius: 3px
		box-shadow: #B6B6B6 0 10px 10px
		.option
			padding: 0px 20px 0px 20px
			line-height: 1.2em
			position: relative
			white-space: pre
			height: 1.2em
			border-top: 1px solid transparent;
			border-bottom: 1px solid transparent;
			&.hover,
			&:hover
				selection(!important)
			&.selected:before
				content: "✓"
				display: block
				position: absolute
				left: 7px
				top: 0
		&.nohover .option.selected
			selection()
		&.visible
			display: block
	.selectfield &
		margin-left: 7px

.list
	border-right: 1px solid #E8E8E8
	.searchbox
		//position: absolute
		margin: 20px 10px
		width: 210px
	.itemContainer
		position: absolute
		top: 50px
		right: 0
		left: 0
		bottom: 0
		overflow: auto
		.ListItem
			height: 25px
			line-height: 25px
			list-style: none
			.content
				padding: 5px 10px
				margin: 0 10px
				border-bottom: 1px dotted #CCC
				font-weight: 500
			&.selected
				background-color: #EDF3FE
				color: #0061FF
				.content
					border-bottom: 0px solid white

.buttonBar
	height: 25px
	padding: 0 20px 10px

.button
	display: inline-block
	text-align: center
	//min-width: 30px
	border: 1px solid #C0C0C0
	border-radius: 4px
	padding: 5px 20px
	font-size: standard-font-size
	margin-right: 10px
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.0, rgb(255, 255, 255)), color-stop(1.0, rgb(238, 238, 238)))
	background-image: -webkit-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -moz-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -ms-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -o-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	line-height: 17px
	height: 15px
	color: #666
	float: left
	&.right
		float: right
		margin-left: 10px
		margin-right: 0
	&:active
		//background-image: none
		//background-color: blue
		box-shadow: rgba(150, 150, 150, .5) 0 1px 10px 0 inset
	&.bigger
		font-weight: 500
		height: 19px
		font-size: 1.2em
		line-height: 17.333333015441895px
		padding: 3px 10px
	&[disabled]
		color: #C8C8C8
		&:active
			box-shadow: none		
.grid
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	overflow-x: hidden;
	overflow-y: auto;
	.container
		height: 100%
		overflow-x: hidden;
		overflow-y: auto;
		table
			min-width: 100%
		.header
			.column
				color: #758292
				line-height: 2em
				&.ascending .sticky span:after
					content: "▲"
					font-size: .7em
					display: inline-block
					position: relative
					padding-left: 10px
				&.descending .sticky span:after
					content: "▼"
					font-size: .7em
					display: inline-block
					position: relative
					padding-left: 10px
				.sticky
					position: absolute
					top: 0
					margin-left: -1px
					width: 100%
					line-height: 2em
					text-align: left;
					padding: 0 15px 0 15px
					z-index: 3
					span
						font-weight: 600
						font-size: .9em
					&:before
						position: absolute
						top: 0
						left: 0
						right: 0
						content: ""
						display: block
						height: 2em
						background-image: -webkit-gradient(linear, left top, left bottom, color-stop( 0.3, rgba(255, 255, 255, 1) ), color-stop( 1.0, rgba(255, 255, 255, 0) ));
						background-image: -webkit-linear-gradient(top, rgba(255, 255, 255, .8) 30%, rgba(255, 255, 255, 0) 100% );
						background-image: -moz-linear-gradient(top, rgba(255, 255, 255, .8) 30%, rgba(255, 255, 255, 0) 100% );
						background-image: -ms-linear-gradient(top, rgba(255, 255, 255, .8) 30%, rgba(255, 255, 255, 0) 100% );
						background-image: -o-linear-gradient(top, rgba(255, 255, 255, .8) 30%, rgba(255, 255, 255, 0) 100% );
						background-image: linear-gradient(top, rgba(255, 255, 255, .8) 30%, rgba(255, 255, 255, 0) 100% );
						z-index: -1
					&:after
						content: ""
						display: block
						border-bottom: 1px solid #CDCDCD
						border-left: 1px solid #CDCDCD
						position: absolute
						background: rgba(255, 255, 255, 0.7)
						left: 0
						right: 0
						top: 0
						bottom: 0
						z-index: -2
		.row
			background: white
			&.top-spacer
				height: 2em
				background: white
			&:nth-child(even)
				background: #F6F7F9
			.cell
				min-width: 80px;
				white-space: pre
				padding: 0 15px 0 15px
				line-height: 2em
				&, *
					white-space: nowrap
					color: #808080
					font-weight: 400
				&:nth-child(1),
				&:nth-child(1) *
					color: black
				&.number
					text-align: right
					&.negative
						color: maroon
				&.date
					text-align: right