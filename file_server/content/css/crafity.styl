standard-font-size = 10pt

*
	font-family: "Helvetica Neue", "Segoe UI"
	font-size: standard-font-size
	line-height: 1em
	padding: 0
	margin: 0
	font-weight: normal
	letter-spacing: 0px
	cursor: default

:focus
	outline: none

body
	font-weight: 200
	font-size: standard-font-size
	background-color: #FFFFFF
	margin-left: 380px
	-moz-user-select: -moz-none
	-khtml-user-select: none
	-webkit-user-select: none
	-ms-user-select: none
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none
	padding: 20px

h1, h2, h3
	//font-family: "Helvetica Neue"
	font-weight: 200
	font-size: 2em

h2
	font-size: 1.7em

h3
	font-size: 1.3em

.app
	position: absolute
	top: 0
	right: 0
	left: 191px
	bottom: 0
	z-index: 100
	transition: left 400ms ease-out
	background-color: transparant// white
	&.fullscreen
		left: 0

.hidden
	display: none

.field
	line-height: 1.5em;
	.form &,
	.form.edit &
		label
			width: 150px
			display: inline-block
			text-align: right
			color: #bbb
			font-weight: normal
			letter-spacing: 0.02em
			text-transform: lowercase
		input[type=text]
			padding-left: 10px
			border: none
			cursor: auto
		&.edit input[type=text]:focus
			position: absolute
			padding: 3px
			border: 1px solid #BDBDBD
			box-shadow: 0 1px 5px #808182
			text-indent: 5px
			border-radius: 2px;
	.form.readonly & input[type=text]
		cursor: default !important

	.form.readonly & label:hover
		& + input[type=text]
			background-color: #E4E4E4
			border-radius: 0 10px 10px 0;
		.border
			display: inline-block
			background-color: #B2B3B3
			border-radius: 10px 0 0 10px;
			padding: 1px 1px 1px 5px
			color: white

.menu-panel
	display: block
	-webkit-transform: translate(0, 0)
	-webkit-transition: -webkit-transform 400ms ease-in
	border-right: #E8E8E8 1px solid
	h2
		font-size: 9pt
		font-weight: 400
		color: #A2A2A2
		letter-spacing: 0.025em
		line-height: 1.5em
	.menuitem
		list-style: none
		text-indent: 5px
		line-height: 1.4em
		a
			color: black
			text-decoration: none
			&:focus
				color: red;
		&.selected a
			color: #0061FF
			font-weight: 500

.menu-panel.hidden
	-webkit-transform: translate(-190px, 0)

.main.menu-panel
	background-color: #F7F7F7
	position: absolute
	top: 0
	left: 0
	bottom: 0
	min-width: 150px
	padding: 20px
	z-index: -10

.sub.menu-panel
	background-color: #FCFCFC
	position: absolute
	top: 0
	left: 190px
	bottom: 0
	min-width: 150px
	padding: 20px
	z-index: -20

.searchbox
	input
		border-radius: 10px
		height: 25px
		width: 100%
		text-indent: 3px
		font-size: 1em
		line-height: 1.3em
		border: 1px solid lightgray
		outline: none
		box-shadow: #AAA 0 1px 2px inset
		position: relative
		padding-right: 5px;
		padding-left: 5px;
		-webkit-appearance: searchfield
		white-space: initial


.selectbox
	border: none
	background: transparent
	-webkit-appearance: none
	-webkit-background-clip: none	
	height: 18px
	border-radius: 0
	.selectfield &
		padding-left: 10px

.list
	border-right: 1px solid #E8E8E8
	.searchbox
		//position: absolute
		margin: 20px 10px
		width: 210px
	.itemContainer
		position: absolute
		top: 50px
		right: 0
		left: 0
		bottom: 0
		overflow: scroll
		.ListItem
			height: 25px
			line-height: 25px
			list-style: none
			.content
				padding: 5px 10px
				margin: 0 10px
				border-bottom: 1px dotted #CCC
				font-weight: 500
			&.selected
				background-color: #EDF3FE
				color: #0061FF
				.content
					border-bottom: 0px solid white

.clients
	position: absolute
	top: 0
	right: 0
	left: 0
	bottom: 0
	.clientList
		background-color: #FCFCFC
		position: absolute
		//display: block
		top: 0
		width: 230px
		left: 0
		bottom: 0
	.detailsContainer
		position: absolute
		top: 0
		left: 230px
		bottom: 0
		right: 0
		padding: 10px
		.form
			margin-top: 30px
		.header
			height: 25px
			line-height: 25px
			font-size: 1.5em
		.noResultsMessage
			font-size: 14px
			letter-spacing: 0.02em
			color: #929292
			font-weight: 500
			padding-top: 60px
			text-align: center
		.buttonBar
			position: absolute
			overflow: hidden
			bottom: 0
			left: 0
			right: 0

.buttonBar
	height: 25px
	padding: 0 20px 10px

.button
	display: inline-block
	text-align: center
	//min-width: 30px
	border: 1px solid #C0C0C0
	border-radius: 4px
	padding: 5px 20px
	font-size: standard-font-size
	margin-right: 10px
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0.0, rgb(255, 255, 255)), color-stop(1.0, rgb(238, 238, 238)))
	background-image: -webkit-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -moz-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -ms-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: -o-linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	background-image: linear-gradient(top, rgb(255, 255, 255), rgb(238, 238, 238))
	line-height: 17px
	height: 15px
	color: #666
	float: left
	&.right
		float: right
		margin-left: 10px
		margin-right: 0
	&:active
		//background-image: none
		//background-color: blue
		box-shadow: rgba(150, 150, 150, .5) 0 1px 10px 0 inset
	&.bigger
		font-weight: 500
		height: 19px
		font-size: 1.2em
		line-height: 17.333333015441895px
		padding: 3px 10px

